{
  "compilerOptions": {
    
    "rootDir": "./src",
    "outDir": "./dist",

   
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

   
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    
    "sourceMap": true,
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
